@model RolesViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>
<div class="tab-pane fade show active mt-5 p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
    <h1 class="mb-5">Are You Sure You Want To Delete @Model.Name !?</h1>

    <div class="row">
        <div asp-validation-summary="All"></div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="Id"></label>
            <input asp-for="Id" class="form-control" readonly />
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>

        <div class="mt-4">
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@Model.Id">
                <i class="fas fa-trash"></i> Delete
            </button>

            <!-- Delete Modal -->
            <div class="modal fade" id="deleteModal-@Model.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Delete User</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Are You Sure to Delete this User @Model.Name?
                        </div>
                        <div class="modal-footer">
                            <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <h5 class="d-inline">|</h5>
            <a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
        </div>
    </div>
</div>
