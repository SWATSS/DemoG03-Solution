@model RolesViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tab-pane fade show active mt-5 p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
    <h1 class="mb-5">@Model.Name Details</h1>

    <div class="row">
        <div asp-validation-summary="All"></div>
        <form asp-action="Edit" method="post" enctype="multipart/form-data">

            <div class="form-group mb-3 ">
                <label class="form-label" asp-for="Id"></label>
                <input asp-for="Id" class="form-control" readonly />
            </div>
            <div class="form-group mb-3 ">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="mt-4">
                <input class="btn btn-warning" type="submit" value="Save" />
                <h5 class="d-inline">|</h5>
                <a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
            </div>
        </form>
    </div>
</div>