@model RolesViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tab-pane fade show active mt-5 p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
    <h1 class="mb-5">@Model.Name Details</h1>

    <div class="row">
        <div asp-validation-summary="All"></div>
        <form asp-action="Edit" method="post" enctype="multipart/form-data">

            <partial name="PartialViews/DetailsDeletePartialView" />

            <div class="mt-4">
                <a asp-action="AddOrRemoveUsers" asp-route-roleId="@Model.Id" class="btn btn-success">Add Or Remove User</a>
                <input class="btn btn-warning" type="submit" value="Save" />
                <h5 class="d-inline">|</h5>
                <a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
            </div>
        </form>
    </div>
</div>

@section ValidationScripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}