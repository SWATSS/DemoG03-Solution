@model UsersViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var FullName = string.Concat(Model.FName, ' ', Model.LName);
}

<div class="tab-pane fade show active mt-5 p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
    <h1 class="mb-5">User @FullName Details</h1>

    <div class="row">
        <div class="form-group mb-3 ">
            <label class="form-label" asp-for="id"></label>
            <input asp-for="id" class="form-control" readonly />
        </div>
        <div class="form-group mb-3 ">
            <label class="form-label" asp-for="FName"></label>
            <input asp-for="FName" class="form-control" readonly />
        </div>
        <div class="form-group mb-3 ">
            <label class="form-label" asp-for="LName"></label>
            <input asp-for="LName" class="form-control" readonly />
        </div>
        <div class="form-group mb-3 ">
            <label class="form-label" asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" readonly />
        </div>
        <div class="form-group mb-3 ">
            <label class="form-label" asp-for="Email"></label>
            <input asp-for="Email" class="form-control" readonly />
        </div>

    </div>
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-warning">Edit</a>
        <h5 class="d-inline">|</h5>
        <a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
    </div>
</div>
