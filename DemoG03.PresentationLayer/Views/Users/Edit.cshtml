@model UsersViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var FullName = string.Concat(Model.FName, ' ', Model.LName);
}

<div class="tab-pane fade show active mt-5 p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
    <h1 class="mb-5">User @FullName Details</h1>

    <div class="row">
        <div asp-validation-summary="All"></div>
        <form asp-action="Edit" method="post" enctype="multipart/form-data">

            <div class="form-group mb-3 ">
                <label class="form-label" asp-for="FName"></label>
                <input asp-for="FName" class="form-control" />
                <span asp-validation-for="FName"></span>
            </div>
            <div class="form-group mb-3 ">
                <label class="form-label" asp-for="LName"></label>
                <input asp-for="LName" class="form-control" />
                <span asp-validation-for="LName"></span>
            </div>
            <div class="form-group mb-3 ">
                <label class="form-label" asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control " oninput="this.value=this.value.replace(/[^0-9]/g,'');" />
                <span asp-validation-for="PhoneNumber"></span>
            </div>
            @* <label class="form-label">Roles</label> 
             @foreach (var Role in Model.Roles)
            {
                <div class="form-check">
                    <label  class="form-check-label" for="flexCheckDefault">
                    <input asp-for="Roles" class="form-check-input" type="checkbox" value="@Role" id="flexCheckDefault">
                        @Role
                    </label>
                    <span asp-validation-for="Roles"></span>
                </div>
            } *@

            <div class="mt-4">
                <input class="btn btn-warning" type="submit" value="Save" />
                <h5 class="d-inline">|</h5>
                <a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
            </div>
        </form>
    </div>
</div>